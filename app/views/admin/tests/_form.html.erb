<%= form_with model: [:admin, @test], method: verb do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <%= form.label :text %>
  <%= form.text_field :title, id: :test_text %>

  <%= form.label :level %>
  <%= form.number_field :level, id: :test_level %>

  <%= form.label :category_id %>
  <%= form.collection_select :category_id, Category.all, :id, :title%>

  <%= form.label :timer %>
  <%= form.number_field :timer, id: :test_timer %>

  <%= form.submit %>
<% end %>

<br>

<%= link_to t(:back, scope: :base), admin_tests_path, class: 'btn btn-primary' %>
